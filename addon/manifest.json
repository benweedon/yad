{
    "manifest_version": 2,
    "name": "Yad",
    "version": "0.0.0",
    "applications": {
        "gecko": {
            "id": "yad@pesv.at"
        }
    },
    "description": "Provides mouse hover translations of Yiddish text to make learning easier.",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["yad.js"],
            "css": ["style.css"]
        }
    ]
}
